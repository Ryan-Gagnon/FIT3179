{
 "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
 "width": 1000,
 "height": 600,
 "title": "Chipotle Stores by State Population",
 "data": {"url": "state_data.csv"},
 "mark": "circle",
 "encoding": {
  "x": {
   "field": "pop",
    "type": "quantitative",
    "title": "Population"
    },
  "y": {
   "field": "stores",
    "type": "quantitative",
    "title": "Number of Stores"
    },
  "color": {
   "field": "state",
   "type": "nominal",
   "scale": {"scheme": "category20"}
    },
  "size": {
   "field": "statepop",
   "type": "quantitative",
   "scale": {"range": [30, 800]},
   "legend": {"format": ".2f"}
   },
  "opacity": {
   "value": 0.6
   }
 }
}
